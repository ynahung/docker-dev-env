#!/usr/bin/env bash
source bin/utils.sh
run_on_remote_host

if [ $# -gt 0 ]; then
    CONTAINER_NAME=$1
else
    get_CONTAINER_NAME
fi

cp configs/requirements.txt @/requirements.txt
rm -rf @/.local
docker exec -it $CONTAINER_NAME pip install -r @/requirements.txt > /dev/null 2>&1
rm -r @/requirements.txt